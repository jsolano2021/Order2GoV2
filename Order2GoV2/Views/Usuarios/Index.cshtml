@model IEnumerable<Order2GoV2.Models.Usuarios>

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Inicio";
}

<h1 class="alert alert-info" role="alert">Gestión de Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdPerfilNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPerfilNavigation.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-primary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.IdUsuario" class="btn btn-info">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="btn btn-warning">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
